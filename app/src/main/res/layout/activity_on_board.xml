<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".presentation.ui.activity.OnBoardActivity">

    <ImageView
        android:id="@+id/iv_icon_app_on_board"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_ramades_shop_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_onboard_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/iv_onboard_1"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/img_onboard_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_app_on_board"
        app:layout_constraintBottom_toTopOf="@id/tv_h1"/>

    <TextView
        android:id="@+id/tv_h1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to StoMaZon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        app:layout_constraintTop_toBottomOf="@id/iv_onboard_1"
        app:layout_constraintBottom_toTopOf="@id/tv_h2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/tv_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your one-stop online shopping solution."
        android:textSize="14sp"
        android:textColor="@color/oil_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_h1"
        app:layout_constraintBottom_toTopOf="@id/btn_start"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_h2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>